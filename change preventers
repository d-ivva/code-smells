class RelatorioAlunos {
    public double calcularPontuacaoRecontratacao(Professor prof) {
        return (prof.avaliacaoAlunos * 0.5) + (prof.presenca * 0.2) + (prof.resultadosProjetos * 0.3);
    }
}

class RelatorioCoordenacao {
    public double calcularPontuacaoRecontratacao(Professor prof) {
        return (prof.avaliacaoAlunos * 0.5) + (prof.presenca * 0.2) + (prof.resultadosProjetos * 0.3);
    }
}

class RelatorioColegas {
    public double calcularPontuacaoRecontratacao(Professor prof) {
        return (prof.avaliacaoAlunos * 0.5) + (prof.presenca * 0.2) + (prof.resultadosProjetos * 0.3);
    }
}


// solução

class Professor {
    double avaliacaoAlunos;
    double presenca;
    double resultadosProjetos;
}

class AvaliacaoRecontratacaoService {
    private static final double PESO_ALUNOS = 0.5;
    private static final double PESO_PRESENCA = 0.2;
    private static final double PESO_PROJETOS = 0.3;

    public double calcularPontuacao(Professor prof) {
        return (prof.avaliacaoAlunos * PESO_ALUNOS) +
               (prof.presenca * PESO_PRESENCA) +
               (prof.resultadosProjetos * PESO_PROJETOS);
    }
}


// chamada da função

class RelatorioAlunos {
    private AvaliacaoRecontratacaoService service = new AvaliacaoRecontratacaoService();

    public void gerarRelatorio(Professor prof) {
        double pontuacao = service.calcularPontuacao(prof);
        System.out.println("Pontuação do professor: " + pontuacao);
    }
}
